{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": ".",
    "removeComments": true,
    "plugins": [{ "transform": "@zerollup/ts-transform-paths", "exclude": ["*"] }]
  },
  "include": ["src/**/*"]
}